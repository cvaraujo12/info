---
import MainLayout from '../layouts/MainLayout.astro';
import NewsSection from '../components/sections/NewsSection';
import StatisticsSection from '../components/sections/StatisticsSection';
import ProjectsSection from '../components/sections/ProjectsSection';
---

<MainLayout title="Info Route - Nova Rota da Seda">
  <section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">Nova Rota da Seda</h1>
        <p class="text-xl md:text-2xl mb-8">Sua fonte completa de informações sobre a maior iniciativa de infraestrutura global</p>
        <div class="flex justify-center gap-4">
          <a href="/projects" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
            Explorar Projetos
          </a>
          <a href="/about" class="border-2 border-white text-white px-6 py-3 rounded-lg font-semibold hover:bg-white/10 transition-colors">
            Saiba Mais
          </a>
        </div>
      </div>
    </div>
  </section>

  <NewsSection client:load />
  <StatisticsSection client:load />
  <ProjectsSection client:load />
</MainLayout> 
---
import MainLayout from '../layouts/MainLayout.astro';
import { ProjectCard } from '../components';
import { fetchProjects } from '../lib/services';

const projects = await fetchProjects();
---

<MainLayout title="Projetos - Info Route" description="Projetos em andamento na Nova Rota da Seda">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold mb-8">Projetos</h1>
    
    {projects.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-gray-500">Nenhum projeto encontrado</p>
      </div>
    ) : (
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {projects.map((project) => (
          <ProjectCard project={project} />
        ))}
      </div>
    )}
  </div>
</MainLayout> 
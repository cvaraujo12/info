---
import '../styles/globals.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Info Route - Nova Rota da Seda' } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <slot />
  </body>
</html> 